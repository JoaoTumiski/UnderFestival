                android:layout_height="wrap_content"
                android:layout_below="@id/TextSegundoArtistasTrap"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_bold"
                android:text="400.000 R$"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextComboFunk"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valorTrap"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/urbano_bold"
                android:gravity="center"
                android:text="CoMBo TRaP"
                android:textColor="@color/white"
                android:textSize="38sp" />

            <TextView
                android:id="@+id/TextArtistasFunk"
