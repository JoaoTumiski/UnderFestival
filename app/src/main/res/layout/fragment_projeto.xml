<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragments.Projeto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/title_projeto"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_title"
                android:fontFamily="@font/gilroy_extrabold"
                android:gravity="center"
                android:text="@string/respiramos_o_underground"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_projeto"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/projeto"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>


    </ScrollView>


</FrameLayout>