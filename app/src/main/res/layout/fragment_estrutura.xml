<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragments.Estrutura">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/Foto_palco"
            android:layout_width="230dp"
            android:layout_height="380dp"
            android:background="@drawable/custom_card"
            android:backgroundTint="@color/pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_estrutura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/staatliches"
            android:text="@string/estrutura_do_evento"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/Foto_palco"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_estrutura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/staatliches"
            android:text="@string/Estrutura"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/Foto_palco"
            app:layout_constraintTop_toBottomOf="@id/title_estrutura" />

        <TextView
            android:id="@+id/valorEstrutura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/staatliches"
            android:text="@string/_25_000_r"
            android:textColor="@color/pink"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/Foto_palco"
            app:layout_constraintTop_toBottomOf="@id/text_estrutura" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>