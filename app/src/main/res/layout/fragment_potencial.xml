<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragments.Potencial">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="8dp"
        android:scrollbarThumbVertical="@drawable/custom_scroll"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_projeto"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/staatliches"
                android:gravity="center"
                android:text="@string/potencial_turistico"
                android:textColor="@color/pink"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_potencial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_projeto"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/staatliches"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/iniciativa"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_potencial"
                android:layout_centerHorizontal="true"
                android:src="@drawable/cataratas"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </ScrollView>


</FrameLayout>